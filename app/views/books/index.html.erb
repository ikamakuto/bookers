<h2>Books</h2>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody
     <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
      </tr>
      <% end %>
     </tbody>
</table>

<h2>New book</h2>


<%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
