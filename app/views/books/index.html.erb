<h2>Books</h2>

<span>
  <% @books.each do |book| %>
  <%= link_to "show", book_path(book.id) %>
  <%= link_to "edit", edit_book_path(book) %>
  <%= link_to "destroy", book,"data-confirm" => "Are you sure?" %>

 <%= link_to book.title, "/books/#{book.id}" %>
  </span>
<% end %>

<h2>New book</h2>

<%= form_with model:@book, url:'/books', local:true do |f| %>
  
  <h5>Title</h5>
  <%= f.text_field :title %>
  
  <h5>Body</h5>
  <%= f.text_area :body %>
  
  <br><%= f.submit 'Create Book' %></br>
<% end %>
